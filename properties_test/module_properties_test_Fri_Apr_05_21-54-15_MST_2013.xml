<?xml version="1.0" encoding="UTF-8"?>
<project name="module_properties_test" default="compile.module.properties_test">
  <dirname property="module.properties_test.basedir" file="${ant.file.module_properties_test}"/>
  
  <property name="module.jdk.home.properties_test" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.properties_test" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.properties_test" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.properties_test" value="${compiler.args}"/>
  
  <property name="properties_test.output.dir" value="${module.properties_test.basedir}/../out/production/properties_test"/>
  <property name="properties_test.testoutput.dir" value="${module.properties_test.basedir}/../out/test/properties_test"/>
  
  <path id="properties_test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="properties_test.module.production.classpath">
    <path refid="${module.jdk.classpath.properties_test}"/>
    <path refid="library.basex.classpath"/>
    <path refid="library.jdom-2.0.classpath"/>
  </path>
  
  <path id="properties_test.runtime.production.module.classpath">
    <pathelement location="${properties_test.output.dir}"/>
    <path refid="library.basex.classpath"/>
    <path refid="library.jdom-2.0.classpath"/>
  </path>
  
  <path id="properties_test.module.classpath">
    <path refid="${module.jdk.classpath.properties_test}"/>
    <pathelement location="${properties_test.output.dir}"/>
    <path refid="library.basex.classpath"/>
    <path refid="library.jdom-2.0.classpath"/>
  </path>
  
  <path id="properties_test.runtime.module.classpath">
    <pathelement location="${properties_test.testoutput.dir}"/>
    <pathelement location="${properties_test.output.dir}"/>
    <path refid="library.basex.classpath"/>
    <path refid="library.jdom-2.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.properties_test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.properties_test">
    <patternset refid="excluded.from.module.properties_test"/>
  </patternset>
  
  <path id="properties_test.module.sourcepath">
    <dirset dir="${module.properties_test.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.properties_test" depends="compile.module.properties_test.production,compile.module.properties_test.tests" description="Compile module properties_test"/>
  
  <target name="compile.module.properties_test.production" depends="register.custom.compilers" description="Compile module properties_test; production classes">
    <mkdir dir="${properties_test.output.dir}"/>
    <javac2 destdir="${properties_test.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.properties_test}/javac">
      <compilerarg line="${compiler.args.properties_test}"/>
      <bootclasspath refid="properties_test.module.bootclasspath"/>
      <classpath refid="properties_test.module.production.classpath"/>
      <src refid="properties_test.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.properties_test"/>
    </javac2>
    
    <copy todir="${properties_test.output.dir}">
      <fileset dir="${module.properties_test.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.properties_test.tests" depends="register.custom.compilers,compile.module.properties_test.production" description="compile module properties_test; test classes" unless="skip.tests"/>
  
  <target name="clean.module.properties_test" description="cleanup module">
    <delete dir="${properties_test.output.dir}"/>
    <delete dir="${properties_test.testoutput.dir}"/>
  </target>
</project>